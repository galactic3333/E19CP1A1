<h1>Personas Asignadas al Proyecto:</h1>
<p><%= @project.people.pluck(:name).join(", ") %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= button_to('Remover del Proyecto', remv_people_project_path(person_id: person.id), :method => :delete, :class =>'btn btn-primary') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

